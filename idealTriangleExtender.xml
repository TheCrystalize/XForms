<?xml version="1.0" encoding="utf-8"?>
<user_transforms>
	<transform_def name="idealTriangleExtender">
		<node name="input_params">
			<real name="idealTriangleExtender">1</real>
		</node>

		<node name="internal_params">
			<real name="weight" />
		</node>

		<int name="num_unit_randoms">1</int>

		<string name="winter_init_function">
			<![CDATA[
				idealTriangleExtender_init_result(idealTriangleExtender)
			]]>
		</string>

		<string name="winter_eval_function">
			<![CDATA[
				let
					z = complex(p_in)
					c0 = (((z + 1.0) / (-z + 1.0)) * sqrt3() + 2) / sqrt3()
					c = (c0 - 1.0) / (c0 + 1.0)
				in
					toVec2(c) * weight
			]]>
		</string>
	</transform_def>


</user_transforms>
