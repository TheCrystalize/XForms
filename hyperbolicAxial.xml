<?xml version="1.0" encoding="utf-8"?>
<user_transforms>
	<transform_def name="hyperbolicAxial">
		<node name="input_params">
			<real name="hyperbolicAxial">1</real>
		</node>

		<node name="internal_params">
			<real name="weight" />
		</node>

		<string name="winter_init_function">
			<![CDATA[
				hyperbolicAxial_init_result(hyperbolicAxial)
			]]>
		</string>

		<string name="winter_eval_function">
			<![CDATA[
				let
					r = dot(p_in, p_in)
					a = atan2(p_in.y, p_in.x)
				in
					vec2(atanh(tanh(r)*cos(a)), atanh(tanh(r)*sin(a))) * weight
			]]>
		</string>
	</transform_def>


</user_transforms>
