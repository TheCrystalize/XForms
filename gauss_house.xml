<?xml version="1.0" encoding="utf-8"?>
<user_transforms>
	<transform_def name="gauss_house">
		<node name="input_params">
			<real name="gauss_house">1</real>
		</node>

		<node name="internal_params">
			<real name="weight" />
		</node>

		<int name="num_gauss_randoms">2</int>

		<string name="winter_init_function">
			<![CDATA[
				gauss_house_init_result(gauss_house)
			]]>
		</string>

		<string name="winter_eval_function">
			<![CDATA[
				let
					r = weight * sqrt(abs(gauss_rnd_0))
					a = gauss_rnd_1 * twopi()
				in
					vec2(cos(a), sin(a)) * r
			]]>
		</string>
	</transform_def>


</user_transforms>
