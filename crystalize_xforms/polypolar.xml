<?xml version="1.0" encoding="utf-8"?>
<user_transforms>
	<transform_def name="polypolar">
		<node name="input_params">
			<real name="polypolar">1</real>
			<real name="polypolar_N" minval="3" >3</real>
			<real name="polypolar_Additive">0</real>
		</node>

		<node name="internal_params">
			<real name="weight" />
			<real name="N" />
			<real name="rotation" />
			<real name="additive" />
		</node>

		<string name="winter_init_function">
			<![CDATA[
					polypolar_init_result(polypolar, polypolar_N, 2 * pi() / polypolar_N, polypolar_Additive)
			]]>
		</string>

		<string name="winter_eval_function">
			<![CDATA[
				let
					passer = mat3x3(0, 0, rotation, N, -p_in.x, -p_in.y, 0, 0, 0)
					iter0 = polypole(passer, 0)
					adder = complex(-p_in) * additive
					final = iterate(polypole, passer)
				in
					toVec2(adder + complex(final.e0, final.e1)) * (weight / N)
			]]>
		</string>
	</transform_def>


</user_transforms>
