<?xml version="1.0" encoding="utf-8"?>
<user_transforms>
	<transform_def name="polCooSys">
		<node name="input_params">
			<real name="polCooSys">1</real>
			<real name="polCooSys_mode"maxval="1.0">1</real>
		</node>

		<node name="internal_params">
			<real name="scale" />
			<real name="mode" />
		</node>

		<string name="winter_init_function">
			<![CDATA[
				polCooSys_init_result(polCooSys, polCooSys_mode)
			]]>
		</string>

		<string name="winter_eval_function">
			<![CDATA[
					if(mode == 1, vec2(atan2(p_in.y, p_in.x), length(p_in)), vec2(cos(p_in.x), sin(p_in.x)) * p_in.y) * scale
			]]>
		</string>
	</transform_def>


</user_transforms>
