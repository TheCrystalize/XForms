<?xml version="1.0" encoding="utf-8"?>
<user_transforms>
	<transform_def name="lineInversion">
		<node name="input_params">
			<real name="lineInversion">1</real>
		</node>

		<node name="internal_params">
			<real name="scale" />
		</node>

		<string name="winter_init_function">
			<![CDATA[
				lineInversion_init_result(lineInversion)
			]]>
		</string>

		<string name="winter_eval_function">
			<![CDATA[
				let
					z = complex(p_in)
					mo1 = (z - 1) / (z + 1)
					mo2 = (z + 1) / (-z + 1)
					f = p_in.x > 0 ? mo1 : mo2
 				in
					toVec2(f) * scale
			]]>
		</string>
	</transform_def>
</user_transforms>
