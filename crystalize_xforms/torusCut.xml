<?xml version="1.0" encoding="utf-8"?>
<user_transforms>
	<transform_def name="torusCut">
		<node name="input_params">
			<real name="torusCut">1</real>
			<real name="size">1</real>
		</node>

		<node name="internal_params">
			<real name="weight" />
			<real name="s" />
			<real name="w0" />
		</node>

		<int name="num_unit_randoms">2</int>

		<string name="winter_init_function">
			<![CDATA[
				torusCut_init_result(torusCut, size, sqrt(size * size + 1.0))
			]]>
		</string>

		<string name="winter_eval_function">
			<![CDATA[
				let
					w = 1.0 / (w0 - cos(twopi() * p_in.y))
					y = s * sin(twopi() * p_in.x / s)
					z = sin(twopi() * p_in.y)
				in
					vec2(y,z) * w * weight
			]]>
		</string>
	</transform_def>


</user_transforms>
