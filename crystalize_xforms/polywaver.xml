<?xml version="1.0" encoding="utf-8"?>
<user_transforms>
	<transform_def name="polywaver">
		<node name="input_params">
			<real name="polywaver">1</real>
			<real name="polywaver_N" minval="3" >3</real>
			<real name="polywaver_Shift">0</real>
		</node>

		<node name="internal_params">
			<real name="weight" />
			<real name="N" />
			<real name="rotation" />
			<real name="shift" />
		</node>

		<string name="winter_init_function">
			<![CDATA[
					polywaver_init_result(polywaver, polywaver_N, 2 * pi() / polywaver_N, polywaver_Shift)
			]]>
		</string>

		<string name="winter_eval_function">
			<![CDATA[
				let
					passer = mat3x3(0, 0, rotation, N, p_in.x, p_in.y, shift, 0, 0)
					iter0 = polywave(passer, 0)
					final = iterate(polywave, passer)
				in
					toVec2(complex(final.e0, final.e1)) * (weight / (N * (1 - shift)))
			]]>
		</string>
	</transform_def>


</user_transforms>
