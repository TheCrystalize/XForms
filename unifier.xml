<?xml version="1.0" encoding="utf-8"?>
<user_transforms>
	<transform_def name="unifier">
		<node name="input_params">
			<real name="unifier">1</real>
			<real name="size">1</real>
			<real name="rotation">0</real>
		</node>

		<node name="internal_params">
			<real name="weight" />
			<real name="size" />
			<real name="rotation" />
		</node>

		<string name="winter_init_function">
			<![CDATA[
				unifier_init_result(unifier, 1/size, 2 * pi() / rotation)
			]]>
		</string>

		<string name="winter_eval_function">
			<![CDATA[
				let
					z = complex(p_in)
					r = z.re * z.re + z.im * z.im
					rot = exp(complex(0,rotation))
					c = if(
						r > 1,
						conj(z) / r,
						z * size * rot
					)
				in
					toVec2(c) * weight
			]]>
		</string>
	</transform_def>


</user_transforms>
