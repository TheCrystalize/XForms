<?xml version="1.0" encoding="utf-8"?>
<user_transforms>
	<transform_def name="newton">
		<node name="input_params">
			<real name="newton">1</real>
			<real name="newton_power">3</real>
			<real name="newton_root">1</real>
		</node>

		<node name="internal_params">
			<real name="weight" />
			<real name="power" />
			<real name="root" />
		</node>

		<string name="winter_init_function">
			<![CDATA[
				newton_init_result(newton, newton_power, newton_root)
			]]>
		</string>

		<string name="winter_eval_function">
			<![CDATA[
				let
					z = complex(p_in.x, p_in.y)
					f = ((power - 1.0) * cpow(z, power) + root) / (power * cpow(z, power - 1.0))
				in
					toVec2(f) * weight
			]]>
		</string>
	</transform_def>


</user_transforms>
